/* miniprogram/pages/detail/detail.wxss */
.detail{
  margin-top: 30rpx;
}
.detail-list-item{
  height: auto;
  border-bottom: 4px rgba(155, 231, 249, 0.453) dashed;
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: left;
  color:#1c3c62;
}
.detail-list-item text{
  margin-left: 5%;
}
.detail-list-item image{
  margin-left: 10%;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.detail-btn{
  margin-top: 3%;
  margin-left: 20%;
  display: flex;
  align-items: center;
  justify-content: left;
  width: 60%;
}
.detail-list-tips{
  font-style: italic;
  font-size: 12px;
  color: red;
  
}